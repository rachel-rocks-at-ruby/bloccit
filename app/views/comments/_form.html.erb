<% if current_user %>
  <%= form_for [topic, post, comment] do |f| %>
    <% if post.errors.any? %>
      <div class="alert alert-danger">
        <h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
        <ul>
          <% post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <%= form_group_tag(post.errors[:body]) do %>
      <div class="form-group">
      <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Add a comment:" %>
      <% end %>
      <div class="form-group">
        <%= f.submit "Create Comment", class: 'btn btn-success' %>
      </div>
  <% end %>
<% end %>